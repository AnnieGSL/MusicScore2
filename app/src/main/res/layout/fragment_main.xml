
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.annie.musicscore.main"
    android:background="@android:color/background_light">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_green_dark"
                android:textColorLink="@android:color/darker_gray"
                android:textSize="18sp"
                android:hint="Titulo o compositor"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:textColorHighlight="?android:attr/textColorHighlight" />
            <Button
                android:text="Buscar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:id="@+id/button"
                android:textColor="@android:color/white"
                android:textColorLink="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:background="@color/colorPrimary"
                android:onClick="buscar" />

            <TextView
                android:text="Filtrar por :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/instruments"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/piano"
                    android:id="@+id/piano"
                    android:background="@android:color/background_light"
                    android:adjustViewBounds="false"
                    android:layout_weight="1"
                    android:onClick="piano" />

                <ImageButton
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/guitarra1"
                    android:id="@+id/guitar"
                    android:layout_width="match_parent"
                    android:background="@android:color/background_light"
                    android:layout_weight="1"
                    android:onClick="guitarra" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/violin"
                    android:id="@+id/violin"
                    android:background="@android:color/background_light"
                    android:layout_weight="1"
                    android:onClick="violin" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/material"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="Ayuda Memoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:id="@+id/titulo"
                    android:textSize="24sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/material2"
                    android:layout_height="110dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/note"
                            android:id="@+id/ib1"
                            android:background="@android:color/background_light"
                            android:layout_weight="1"
                            android:onClick="notas"
                            />
                        <TextView
                            android:text="Notas y mÃ¡s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/notas"
                            android:textSize="14sp"
                            android:textStyle="normal|bold"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_weight="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/sol"
                            android:id="@+id/ib2"
                            android:background="@android:color/background_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="Clave de Sol"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/sol"
                            android:textSize="14sp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="normal|bold"
                            android:layout_weight="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/silencio"
                            android:id="@+id/ib3"
                            android:background="@android:color/background_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="Silencios"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/silencio"
                            android:textSize="14sp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="normal|bold"
                            android:layout_weight="3"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/mat3"
                    android:layout_height="110dp"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ib4"
                            android:background="@android:color/background_light"
                            app:srcCompat="@mipmap/acorde"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="Acordes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/acorde"
                            android:textSize="14sp"
                            android:textStyle="normal|bold"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_weight="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/pentagrama"
                            android:id="@+id/ib5"
                            android:background="@android:color/background_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="Pentagrama"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/penta"
                            android:gravity="center_vertical|center_horizontal"
                            android:textSize="14sp"
                            android:textStyle="normal|bold"
                            android:layout_weight="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/ic_launcher"
                            android:id="@+id/ib6"
                            android:background="@android:color/background_light"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="Otros"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/otro"
                            android:gravity="center_vertical|center_horizontal"
                            android:textSize="14sp"
                            android:textStyle="normal|bold"
                            android:layout_weight="3"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>